// Diffirent border-radius styles
$global-radius  = 4px;
$global-round   = 1600px;
$shapes = {
  radius: $global-radius,
  dot: $global-round,
  circle: $global-round,
  round: $global-round,
  square: initial,
};

// Disabled cursor for form controls and buttons.
// 禁用状态 可自定义鼠标图标
$cursor-disabled = not-allowed;

// Animation 详见 动画样式模块
$ease-out             = cubic-bezier(0.215, 0.61, 0.355, 1);
$ease-in              = cubic-bezier(0.55, 0.055, 0.675, 0.19);
$ease-in-out          = cubic-bezier(0.645, 0.045, 0.355, 1);
$ease-out-back        = cubic-bezier(0.18, 0.89, 0.32, 1.28);
$ease-in-back         = cubic-bezier(0.6, -0.3, 0.74, 0.05);
$ease-in-out-back     = cubic-bezier(0.68, -0.55, 0.27, 1.55);
$ease-out-circ        = cubic-bezier(0.08, 0.82, 0.17, 1);
$ease-in-circ         = cubic-bezier(0.6, 0.04, 0.98, 0.34);
$ease-in-out-circ     = cubic-bezier(0.78, 0.14, 0.15, 0.86);
$ease-out-quint       = cubic-bezier(0.23, 1, 0.32, 1);
$ease-in-quint        = cubic-bezier(0.755, 0.05, 0.855, 0.06);
$ease-in-out-quint    = cubic-bezier(0.86, 0, 0.07, 1);


// Spacing
// -----------------------------------------------------------------------------
// Control the default styling of most Bootstrap elements by modifying these
// variables. Mostly focused on spacing.

$spacer       = 16px;
$spacer-x     = $spacer;
$spacer-y     = $spacer;
$border-width = 1px;
$line-height  = 1.5;

// Z-index
$z-index-view-top     = 20;
$z-index-view-bottom  = $z-index-view-top - 10;

$z-index-base         = 1000;
$z-index-modal        = $z-index-base + 10;
$z-index-notification = $z-index-base + 100;
$z-index-offcanvas    = $z-index-base + 20;
$z-index-popover      = $z-index-base + 30;

