// Font-size: 1rem = 100px
// -----------------------------------------------------------------------------
// rem 基准
// 此基准会根据具体情况由页面设置，默认取100px，

// This sets 1rem to be 100px
// $rem-base = 100px;
// 实现时直接使用 px 单位即可，编译时自动转化为 rem
$font-base = 100px;


// Typography
// -----------------------------------------------------------------------------
// Font, line-height, and color for body text, headings, and more.



// The default font-size is set to 100% of the browser style sheet (usually 16px)
// for compatibility with browser-based text zoom or user-set defaults.

// Since the typical default browser font-size is 16px, that makes the calculation for grid size.
// If you want your base font-size to be different and not have it affect the grid breakpoints,
// set $rem-base to $base-font-size and make sure $base-font-size is a px value.

// Background color for `<body>`
$body-background        = #fff;
// Base background color for most components
$component-background   = #fff;
$font-family = $font-family-sans-serif;

$color-heading             = alpha(#000, 85%);
$color-text                = alpha(#000, 65%);
$color-text-secondary      = alpha(#000, 43%);
$color-heading-dark        = alpha(#fff, 97%);
$color-text-dark           = alpha(#fff, 91%);
$color-text-secondary-dark = alpha(#fff, 67%);
$font-size-base            = 12px;
// $font-size-lg              = $font-size-base + 2;

$font-size-base     = 16px;       // 基准字体大小
$font-size-body     = 16px;       // body 字体大小
$line-height-base   = 1.5;      // body 行高，对中文使用
$font-size-inherit  = 100%;    // 部分位置，可用继承字体大小
$font-family-base   = $font-family;   // body 字体设定
$border-radius-base = 4px;
$border-width-base  = 1px;
$border-radius-sm   = 2px;
$border-style-base  = solid;

// Define default font weights
$font-weight-normal = normal;
$font-weight-bold = 400;  //某些字体使用 bold 太粗

// xx-small
// x-small
// small
// medium
// large
// x-large
// xx-large
$font-size-xs  = 12px;
$font-size-sm  = 14px;
$font-size-md  = $font-size-base;
$font-size-lg  = 18px;
$font-size-xl  = 20px;
$font-size-xxl = 24px;


// Colors:
// -----------------------------------------------------------------------------
// Grayscale and brand colors for use across Bootstrap.
// 所有组件颜色样式都应该由此处可控

// 灰度值引用 gray.styl 即可，如需修改自行覆盖

// Application Colors
// 这里是主题色，若设为背景，则对应字体颜色取反相色（如按钮，效果同此 ATOM 预览，自动显示了背景色并且反相了字体颜色）
// 主题色全部使用 $color- 前缀，另要提供灰度级别的颜色9种级别，之后不再使用其他灰色

$blue-6     = #108ee9;
$purple-6   = #7265e6;
$cyan-6     = #00a2ae;
$green-6    = #00a854;
$pink-6     = #f5317f;
$red-6      = #f04134;
$orange-6   = #f56a00;
$yellow-6   = #ffbf00;

$color-primary            = $blue-6;    // #2db7f5;  // #0e90d2
$color-sub                = lighten($color-primary, 15%);
$color-info               = $blue-6;    // #5bc0de;
$color-success            = $green-6;   // #5cb85c;
$color-warning            = $yellow-6;  // #F37B1D;
$color-danger             = $red-6;     // #f04134;
$color-error              = $red-6;     // #f04134;
$color-highlight          = $red-6;     // #f04134;
$color-gray               = lighten($black, 87.5%);
$color-dark               = #393939;
$color-normal             = #d9d9d9;
$disabled-color           = #d9d9d9;


// 备选颜色
// #0275d8 //#157EFB //#428bca //#15afef #0e90d2
// #5eb95e //#53D76A //#5cb85c
// #f0ad4e //#FD9426 //#f0ad4e
// #dd514c //#FC3159 //#da314b

// For internal use: a color map
$theme-colors = {
  primary:   $color-primary,
  sub:       $color-sub,
  info:      $color-info,
  success:   $color-success,
  warning:   $color-warning,
  danger:    $color-danger,
  alert:     $color-danger,
  dark:      $color-dark,
};
// $theme-sizes: (
//   xs: $font-size-xs,
//   sm: $font-size-sm,
//   lg: $font-size-lg,
//   xl: $font-size-xl
// );

// $theme-states: (
