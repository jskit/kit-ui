@keyframes loadingCircle {
  0% {
    transform-origin: 50% 50%;
    transform: rotate(0deg);
  }
  100% {
    transform-origin: 50% 50%;
    transform: rotate(360deg);
  }
}

@keyframes buttonEffect {
  to {
    opacity: 0;
    top: px2rem(-5);
    left: px2rem(-5);
    bottom: px2rem(-5);
    right: px2rem(-5);
    border-width: px2rem(5);
  }
}

// bounce
