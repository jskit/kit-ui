// nsa- 动画前缀
$anpre = '';

// Animation class hook
$animate-hook = "animated";

// Animation duration
$animate-duration = 0.3s;



// Base style
// =============================================================================
// 动画基础样式

animated() {
  animation-duration: $animate-duration;
  animation-fill-mode: both;

  forceHardwareAcceleration();
}

.{$animate-hook} {
  animated();

  // Modifier for infinite repetition
  &--infinite {
    animation-iteration-count: infinite;
  }
}

